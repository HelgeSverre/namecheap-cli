{
  "name": "@helgesverre/namecheap-cli",
  "version": "0.1.0",
  "description": "Command-line interface for managing Namecheap domains, DNS records, nameservers, and WhoisGuard privacy",
  "keywords": [
    "namecheap",
    "cli",
    "dns",
    "domain-management",
    "nameserver"
  ],
  "homepage": "https://github.com/helgesverre/namecheap-cli#readme",
  "bugs": {
    "url": "https://github.com/helgesverre/namecheap-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helgesverre/namecheap-cli.git"
  },
  "license": "MIT",
  "author": {
    "name": "Helge Sverre",
    "email": "helge.sverre@gmail.com",
    "url": "https://github.com/helgesverre"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "namecheap": "dist/index.js"
  },
  "files": [
    "dist",
    "scripts",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "prepublishOnly": "bun run build",
    "postinstall": "node scripts/postinstall.js || true",
    "build": "bun build src/index.ts --outdir dist --target node",
    "check": "bun run typecheck && bun run lint && bun run format:check",
    "dev": "bun run src/index.ts",
    "fix": "bun run lint:fix && bun run format",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --fix",
    "lint:check": "eslint . ",
    "sort": "bunx sort-package-json",
    "start": "node dist/index.js",
    "test": "echo  'Run tests via bun test, instead of bun run test' && exit 1",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "build:binary": "bun build src/index.ts --compile --outfile dist/namecheap",
    "build:binary:linux": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile dist/namecheap-linux-x64",
    "build:binary:linux-arm": "bun build src/index.ts --compile --target=bun-linux-arm64 --outfile dist/namecheap-linux-arm64",
    "build:binary:macos": "bun build src/index.ts --compile --target=bun-darwin-x64 --outfile dist/namecheap-darwin-x64",
    "build:binary:macos-arm": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/namecheap-darwin-arm64",
    "build:binary:windows": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile dist/namecheap-windows-x64.exe",
    "build:all": "bun run build:binary:linux && bun run build:binary:linux-arm && bun run build:binary:macos && bun run build:binary:macos-arm && bun run build:binary:windows",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "fast-xml-parser": "^5.3.3",
    "ora": "^9.1.0",
    "tldts": "^7.0.19",
    "update-notifier": "^7.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
